<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>java-training-2018-q2_Dmytro.Strebkov</display-name>
  <welcome-file-list>
    <welcome-file>login</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>ServletController</servlet-name>
    <servlet-class>ua.nure.strebkov.controller.ServletController</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <filter>
    <filter-name>RequestFilter</filter-name>
    <filter-class>ua.nure.strebkov.controller.RequestFilter</filter-class>
  </filter>
  <servlet-mapping>
    <servlet-name>ServletController</servlet-name>
    <url-pattern>/login</url-pattern>
    <url-pattern>/check-login</url-pattern>
    <url-pattern>/registration</url-pattern>
    <url-pattern>/check-registration</url-pattern>
    <url-pattern>/admin-panel</url-pattern>
    <url-pattern>/logout</url-pattern>
    <url-pattern>/find-train</url-pattern>
    <url-pattern>/create-invoice</url-pattern>
  </servlet-mapping>
  <filter-mapping>
    <filter-name>RequestFilter</filter-name>
    <servlet-name>ServletController</servlet-name>
  </filter-mapping>
  <filter-mapping>
    <filter-name>RequestFilter</filter-name>
    <servlet-name>ServletController</servlet-name>
  </filter-mapping>
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/railway_system</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref> 
</web-app>